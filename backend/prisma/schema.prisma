generator client {
  provider = "prisma-client-js"
}

// if migrating to prisma 7, move url to prisma config file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// add blocked list soon
model User {
  id Int @id @default(autoincrement())
  username String @unique
  displayName String
  email String @unique
  password String?
  sub String? 

  contactsAdded Contact[] @relation("ContactInitiator")
  contactsOf Contact[] @relation("ContactReceiver")
  
  sentMessages Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  settingsId Int? @unique
  settings Settings? @relation(fields: [settingsId], references: [id])

  tokens Token[]
}

model Contact {
  userAId Int
  userBId Int

  userA User @relation("ContactInitiator", fields: [userAId], references: [id])
  userB User @relation("ContactReceiver", fields: [userBId], references: [id])

  @@id([userAId, userBId])
}

model Message {
  id Int @id @default(autoincrement())
  sent DateTime @default(now())
  content String

  senderId  Int
  sender User @relation("SentMessages", fields: [senderId], references: [id])

  receiverId Int
  receiver User @relation("ReceivedMessages", fields: [receiverId], references: [id])
}

model Settings {
  id Int @id @default(autoincrement())
  user User?
}

model Token {
  id Int @id @default(autoincrement())
  refreshToken String @unique

  userId Int
  user User @relation(fields: [userId], references: [id])
}