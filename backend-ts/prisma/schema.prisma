generator client {
  provider = "prisma-client-js"
}

// if migrating to prisma 7, move url to prisma config file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// add blocked list soon
model User {
  id String @id @default(uuid())
  username String @unique
  displayName String
  email String @unique
  password String?
  sub String? 

  contactsAdded Contact[] @relation("ContactInitiator")
  contactsOf Contact[] @relation("ContactReceiver")
  
  sentMessages Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  settings Settings?
  
  tokens Token[]
}

model Contact {
  userAId String
  userBId String

  userA User @relation("ContactInitiator", fields: [userAId], references: [id], onDelete: Cascade)
  userB User @relation("ContactReceiver", fields: [userBId], references: [id], onDelete: Cascade)

  @@id([userAId, userBId])
}

model Message {
  id String @id @default(uuid())
  sent DateTime @default(now())
  content String

  senderId String
  sender User @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)

  receiverId String
  receiver User @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
}

model Settings {
  id String @id @default(uuid())

  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Token {
  id String @id @default(uuid())
  refreshToken String @unique
  expiresBy DateTime

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}