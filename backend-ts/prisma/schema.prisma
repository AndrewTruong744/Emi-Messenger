generator client {
  provider = "prisma-client-js"
}

// if migrating to prisma 7, move url to prisma config file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// add blocked list soon
model User {
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String?
  sub String? 

  conversations ConversationParticipant[]
  messages Message[]

  settings Settings?
  
  tokens Token[]
}

model Conversation {
  id String @id @default(uuid())
  isGroup Boolean @default(false)
  messages Message[]

  name String @default("")

  participants ConversationParticipant[]

  timeStamp DateTime @default(now())
  recentMessage String @default("")
}

model ConversationParticipant {
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  conversationId String
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@id([userId, conversationId])
  @@index([conversationId])
}

model Message {
  id String @id @default(uuid())
  sent DateTime @default(now())
  content String

  senderId String
  sender User @relation(fields: [senderId], references: [id], onDelete: Cascade)

  conversationId String
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, sent(sort: Desc)])
}

model Settings {
  id String @id @default(uuid())

  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// also implement this in redis as well
model Token {
  id String @id @default(uuid())
  refreshToken String @unique
  expiresBy DateTime

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}